{
    "manifest_version": 3,
    "name": "Better Image Search",
    "version": "1.0",
    "description": "Sorts Google Image Search results by resolution. Only works on Exact Matches tab.",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://www.developer.chrome.com/*"
    ],
    "action": {
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
}